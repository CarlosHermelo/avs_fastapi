# Archivo env.example - Plantilla para variables de entorno
# Copia este archivo como .env y agrega tus valores reales

# OpenAI API Key (OBLIGATORIA)
OPENAI_API_KEY=sk-tu-clave-openai-aqui

# Configuración de la aplicación
OPENAI_MODEL=gpt-4o-mini
ENVIRONMENT=development

# Configuración de Qdrant (Base de datos vectorial)
QDRANT_URL=http://localhost:6333
COLLECTION_NAME=fragment_store
NOMBRE_BDV=fragment_store
MAX_RESULTS=5

# Configuración de Base de Datos Relacional
DB_TYPE=sqlite
# Para MySQL:
# DB_TYPE=mysql
# BD_SERVER=localhost
# BD_PORT=3306
# BD_NAME=avsp
# BD_USER=root
# BD_PASSWD=tu-password

# Para SQLite:
SQLITE_PATH=BD_RELA/local_database.db

# Configuración de usuario (valores actuales fijos)
ID_USUARIO=321
UGEL_ORIGEN=Formosa

